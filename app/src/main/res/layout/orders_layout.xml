<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:layout_margin="10dp"
        >


        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:text="Phone Number"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textSize="14dp" />



        <TextView
        android:id="@+id/order_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Price"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_below="@id/cart_product_quantity"
        android:gravity="center"
        android:layout_marginTop="25dp"

        />

        <TextView
            android:id="@+id/order_city_dis_neigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City / District / Nieghborhood"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@id/order_total_price"
            android:gravity="center"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:id="@+id/order_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@id/order_city_dis_neigh"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date / time"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@id/order_address"
            android:gravity="center"
            android:layout_marginTop="10dp"

            />



        <Button
            android:id="@+id/order_show_all_products_button"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_time"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonsblack"
            android:text="Show This Order"
            android:textColor="#c2a90f "
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_alignParentLeft="true"


            />
        <Button
            android:id="@+id/order_status"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_time"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_blue"
            android:text="Order Statues"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold|italic"



            />
    </RelativeLayout>


</RelativeLayout>