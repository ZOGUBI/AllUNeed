<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zogubi.alluneed.SearchProductActivity">


    <RelativeLayout
        android:id="@+id/rel444"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        >


        <EditText
            android:id="@+id/search_product_name"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textColorHint="#80000000"
            android:textColor="@android:color/black"
            android:background="@drawable/button_white"
            android:padding="11dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"

            />

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/search_product_name"
            android:background="@drawable/buttonsblack"
            android:drawableRight="@drawable/search3030"
            android:fontFamily="serif"
            android:text="Search"
            android:textColor="#FFD300"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:typeface="serif" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
       android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel444"


        >



    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
