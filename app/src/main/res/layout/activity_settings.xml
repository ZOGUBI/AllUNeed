<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zogubi.alluneed.SettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"

        >
        
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">  
            
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:id="@+id/settings_close_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Close"
                   android:textColor="@android:color/white"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_alignParentStart="true"

                   />
               <TextView
                   android:id="@+id/settings_update_account_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Update"
                   android:textColor="@android:color/white"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"


                   />




           </RelativeLayout>



        </android.support.v7.widget.Toolbar>


        
    </android.support.design.widget.AppBarLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:src="@drawable/profile"
        android:layout_below="@id/app_bar_settings"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />


    <TextView
            android:id="@+id/settings_profile_image_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Picture"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/settings_profile_image"
        />


    <EditText
        android:id="@+id/settings_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_profile_image_change"
        android:layout_margin="5dp"
        android:hint="New Phone Number"
        android:inputType="number"
        android:padding="10dp" />
    <EditText
        android:id="@+id/settings_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_phone_number"
        android:hint="New Full Name"
        android:padding="10dp"
        android:layout_margin="5dp"

        />
    <EditText
        android:id="@+id/settings_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_full_name"
        android:hint="New Address"
        android:padding="10dp"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/settings_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_address"
        android:layout_margin="5dp"
        android:hint="New Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/security_question_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_password"
        android:layout_margin="15dp"
        android:text="Set Security Question"
        android:background="@drawable/button_blue"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="15sp"

        android:padding="10dp" />

</RelativeLayout>
