<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zogubi.alluneed.AdminPanel.AdminCategoryActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Select a Category To Add Product"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
       />


    <GridLayout
        android:id="@+id/category_linear_layout"
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:layout_marginBottom="97dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:columnCount="4"
        android:rowCount="3"
        android:layout_below="@+id/textView"

        >


        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/tshirts" />


        <ImageView
            android:id="@+id/femaledresses"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/femaledresses"

            />


        <ImageView
            android:id="@+id/sport_t_shirts"
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/sports" />

        <ImageView
            android:id="@+id/sweathers"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/sweather" />

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/glasses" />


        <ImageView
            android:id="@+id/purses_bag"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"

            app:srcCompat="@drawable/purses_bags" />


        <ImageView
            android:id="@+id/hats"
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/hats" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/shoess" />


        <ImageView
            android:id="@+id/headphones"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/headphoness" />


        <ImageView
            android:id="@+id/laptops"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/laptops" />


        <ImageView
            android:id="@+id/watches"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/watches" />

        <ImageView
            android:id="@+id/mobile_phones"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/mobiles" />

    </GridLayout>

    <Button
        android:id="@+id/admin_logout_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


    <Button

        android:id="@+id/check_order_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/buttons"
        android:text="Check New Orders"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:layout_above="@+id/admin_logout_button"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/maintain_product_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/check_order_button"
        android:background="@drawable/buttons"
        android:text="Maintain Products"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>





</RelativeLayout>
