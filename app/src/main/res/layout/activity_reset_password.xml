<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zogubi.alluneed.ResetPasswordActivity">



    <RelativeLayout
        android:id="@+id/relativ_reset"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/activity_headline_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Question / Reset Password"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"

            />


    </RelativeLayout>

    <EditText
       android:id="@+id/reset_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Phone Number"
        android:background="@drawable/input_design_black"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/relativ_reset"

        />

    <TextView
        android:id="@+id/answer_this_question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer The Following Questions"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/reset_phone_number"

        />

    <TextView
        android:id="@+id/reset_question_1_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Where do Your Parents Had There Wedding ?"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="17dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/answer_this_question_text_view"

        />

    <EditText
        android:id="@+id/reset_security_question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Answer"
        android:background="@drawable/input_design_black"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/reset_question_1_text_view"

        />




    <TextView
        android:id="@+id/reset_question_2_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What Was The Name of Your Primary School ?"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/reset_security_question_1"

        />


    <EditText
        android:id="@+id/reset_security_question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Answer"
        android:background="@drawable/input_design_black"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/reset_question_2_text_view"

        />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:background="@drawable/buttons"
        android:layout_below="@id/reset_security_question_2"
        android:textSize="20sp"
        android:textStyle="bold"

        android:layout_margin="20dp"
        />



</RelativeLayout>
