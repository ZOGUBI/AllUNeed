<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zogubi.alluneed.ProductDetailsActivity">


    <android.support.v4.view.ViewPager


        android:id="@+id/viewPager"
        android:layout_width="359dp"
        android:layout_height="212dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_design_black"
       />





    <TextView
        android:id="@+id/pNameDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Product Name"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
       android:layout_below="@id/viewPager"
        />

    <TextView
        android:id="@+id/pDescriptionDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Product Description"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@id/pNameDetails"

        />

    <TextView
        android:id="@+id/pPriceDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text="Product Price"
        android:textAlignment="textEnd"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/pDescriptionDetails"

        />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/pCountButton"
        android:layout_width="152dp"
        android:layout_height="51dp"
        app:finalNumber="10"
        app:initialNumber="1"
        app:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/pAddToCartButton"
        android:layout_marginBottom="20dp"
        >


    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/pAddToCartButton"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttons"
        android:drawableRight="@drawable/nav_cart"
        android:fontFamily="serif"
        android:text="     Add To Cart  "
        android:textAlignment="center"
        android:textColor="#FFD700"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="monospace"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
         />

    <TextView
        android:id="@+id/TL"
        android:layout_width="9dp"
        android:layout_height="26dp"
        android:layout_alignBaseline="@+id/pPriceDetails"
        android:layout_toEndOf="@+id/pPriceDetails"
        android:text="â‚º"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>

