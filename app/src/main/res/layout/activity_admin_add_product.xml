<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zogubi.alluneed.AdminPanel.AdminCategoryActivity">



    <TextView
        android:id="@+id/category_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Please add at least 2 , at most 8 pictures"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"


        />


    <ImageView
        android:id="@+id/addNewProductImage"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/select_product_image"
        android:layout_below="@id/category_name_text_view"
        android:layout_marginTop="10dp"/>


    <EditText
        android:id="@+id/productNameEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_centerHorizontal="true"
        android:hint="Product Name"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:layout_below="@+id/addNewProductImage"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/productDescEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_design"
        android:layout_marginTop="10dp"
        android:hint="Product Description"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:layout_below="@id/productNameEditText"

        />

    <EditText
        android:id="@+id/productPriceEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_design"
        android:hint="Product Price"
        android:inputType="number"
        android:padding="10dp"
        android:layout_below="@id/productDescEditText"
        />

    <Button
        android:id="@+id/addNewProductButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttons"
        android:layout_centerHorizontal="true"
        android:text="Add Product"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/productPriceEditText" />
    /
</RelativeLayout>